    <script>
        let balance = 0;

        function updateBalance() {
            document.getElementById('balance').innerText = `ç›®å‰é¤˜é¡ï¼š${balance} å…ƒ`;
        }

        function insertCoin(amount, btn) {
            balance += amount;
            updateBalance();
            // åŠ ä¸Šæ—‹è½‰å‹•ç•«
            btn.classList.add('spin-animation');
            setTimeout(() => btn.classList.remove('spin-animation'), 1000);
        }

        function buyItem(element, name, price) {
            if (balance >= price) {
                // è³¼è²·å‹•ç•«
                element.classList.add('shake-animation');
                setTimeout(() => element.classList.remove('shake-animation'), 500);
                setTimeout(() => {
                    alert(`æˆåŠŸè³¼è²· ${name}ï¼æ‰¾å› ${balance - price} å…ƒ`);
                    balance = 0;
                    updateBalance();
                }, 500); // å‹•ç•«è·‘å®Œå†è·³ alert
            } else {
                alert("é¤˜é¡ä¸è¶³ï¼Œè«‹å…ˆæŠ•å¹£ï¼");
            }
        }

        function refund() {
            alert(`å·²é€€é‚„ ${balance} å…ƒ`);
            balance = 0;
            updateBalance();
        }

        function exitGame() {
            if (confirm("ç¢ºå®šè¦é›¢é–‹å—ï¼Ÿ")) {
                alert("æ„Ÿè¬ä½¿ç”¨è²©è³£æ©Ÿï¼Œå†è¦‹ï¼");
